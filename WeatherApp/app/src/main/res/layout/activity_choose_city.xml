<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="@string/tv_choose_welcome"
        android:textSize="25sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="@string/tv_choose_guide"
        android:textSize="18sp"/>

    <Spinner
        android:id="@+id/ten_city"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="#A1A9BA"
        android:entries="@array/ten_city"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="100dp"
        android:paddingBottom="5dp"
        android:paddingLeft="65dp"
        android:paddingTop="5dp"/>

    <Button
        android:id="@+id/btDecision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="145dp"
        android:onClick="onButtonClick"
        android:text="@string/bt_decision"/>

    <Button
        android:id="@+id/btPrevious"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:onClick="onButtonClick"
        android:text="@string/bt_previous"/>

</LinearLayout>